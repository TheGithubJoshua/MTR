#!/usr/bin/env bash
# Load functions and variables
. /usr/bin/common
# Display ssh logo
ssh_logo

cat << "EOF"
Connect your iDevice to this computer

The keyboard layout is in American Qwerty.
Your iDevice's default password is alpine.
Your iDevice's users are `root` and `mobile`.
Your iDevice's default port is 22.

EOF
prompt 'User: ' user
prompt 'Port: ' port
prompt 'IP: ' ip

clear

blue_echo 'SSHing into your Device...'
ssh -o "ProxyCommand=inetcat $port" -o "UserKnownHostsFile=/dev/null" $user@$ip || \
    failed_echo 'Failed to SSH into your Device.'
enter_to_quit
